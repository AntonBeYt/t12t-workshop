{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["cypress", "cypress-axe"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "workshop-automated-testing/01-cypress-components/AppAppBar.cy.tsx",
    "cypress.d.ts",
    "workshop-manual-testing/01-keyboard-navigation/MarketingPageBrokenKeyboard.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
